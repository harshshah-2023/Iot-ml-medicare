<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"

    android:background="@drawable/editable_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/circles">
    </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView

        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="40sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/droid_serif"
        android:textColor="#603a91"/>
    <TextView
        android:id="@+id/slogan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In to start journey"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/editext_transparent"
        android:ems="10"
        android:textColorHint="#603a91"
        android:inputType="text"
        android:hint="Username"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:padding="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/editext_transparent"
        android:ems="10"
        android:textColorHint="#603a91"
        android:inputType="text"
        android:hint="Email/phone number"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:padding="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/editext_transparent"
        android:ems="10"
        android:textColorHint="#603a91"
        android:inputType="text"
        android:hint="conntected user"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:padding="8dp"/>

   <EditText
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/editext_transparent"
    android:ems="10"
    android:textColorHint="#603a91"
    android:inputType="text"
    android:hint="password"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginTop="32dp"
    android:padding="8dp"/>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/connect_dispenser"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:text="Sign In"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        style="@style/Widget.MyButton"/>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:text="Already have an account, login"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/rounded_shape"
        android:textColor="@color/black">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Login"

            android:layout_gravity="center"/>
    </LinearLayout>

    </LinearLayout>

</FrameLayout>
