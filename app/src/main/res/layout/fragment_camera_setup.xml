<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/largbg2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camsetup_header"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
           android:fontFamily="@font/droid_serif"
            android:textColor="@color/white"
            android:textSize="25sp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo" />

    </FrameLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="16dp"
        android:text="@string/camsetup_midheader"
        android:textColor="#162676"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/camsetup_subheader"
        android:paddingHorizontal="60dp"
        android:textAlignment="center"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/connect_dispenser"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:text="@string/camsetup_connbtn"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        style="@style/Widget.MySkyyButton"/>

<!--   <com.google.android.material.button.MaterialButton-->
<!--       android:id="@+id/connect_homecam"-->
<!--    android:layout_width="200dp"-->
<!--       android:layout_height="51dp"-->
<!--       android:layout_marginTop="16dp"-->
<!--    android:text="Home Cam"-->
<!--    android:layout_gravity="center"-->
<!--    style="@style/Widget.MyLightButton"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/setup_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="@string/camsetup_help"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_help_outline_24"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>




</LinearLayout>
